<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_seller"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/divider_top"
        android:padding="5dp" />

    <TextView
        android:id="@+id/name_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_seller"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alice"
        android:text="Nasi Campur B2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_seller"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:text="Jl. Jalan No.15, Bandung" />

    <TextView
        android:id="@+id/tipe_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_seller"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:text="Makanan" />

    <View
        android:id="@+id/divider_bot"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/tipe_seller"
        android:background="#f1e6e6" />

</RelativeLayout>